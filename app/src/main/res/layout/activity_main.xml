<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

   <com.peihou.kotlin.view.RoundProgressBar
       android:id="@+id/roundProgress"
       android:layout_width="200dp"
       android:layout_height="200dp"
       app:roundColor="@android:color/holo_orange_light"
       app:roundProgressColor="@android:color/holo_blue_bright"
       app:roundWidth="20dp"
       app:textColor="#9A32CD"
       app:textIsDisplayable="true"
       android:layout_centerHorizontal="true"
       app:textSize="28sp" />
   <com.peihou.kotlin.view.RoundProgressBar
       android:layout_below="@+id/roundProgress"
       android:id="@+id/roundProgress1"
       android:layout_width="200dp"
       android:layout_height="200dp"
       app:style="FILL"
       app:roundColor="@android:color/holo_red_dark"
       app:roundProgressColor="@android:color/holo_orange_dark"
       app:roundWidth="20dp"
       app:textColor="#9A32CD"
       app:textIsDisplayable="true"
       app:textSize="28sp"
       android:layout_centerInParent="true"
       />

</RelativeLayout>